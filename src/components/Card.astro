---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

type Props = {
  variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, ...props } = data;
const postPath = getPath(id, filePath);
---

<li class="my-6 post-card" data-post-path={postPath}>
  <a
    href={postPath}
    class:list={[
      "inline-block text-lg font-medium text-accent",
      "decoration-dashed underline-offset-4 hover:underline",
      "focus-visible:no-underline focus-visible:underline-offset-0",
    ]}
  >
    <Heading
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
      class="flex items-center gap-2"
    >
      {title}
      <span class="read-badge hidden text-sm font-normal opacity-60">(已读)</span>
    </Heading>
  </a>
  <Datetime {...props} />
  <p>{description}</p>
</li>

<script is:inline>
  function checkReadStatus() {
    const readPosts = JSON.parse(localStorage.getItem('readPosts') || '[]');
    const postCards = document.querySelectorAll('.post-card');
    
    postCards.forEach(card => {
      const postPath = card.getAttribute('data-post-path');
      if (readPosts.includes(postPath)) {
        const badge = card.querySelector('.read-badge');
        if (badge) {
          badge.classList.remove('hidden');
        }
      }
    });
  }
  
  // Run on page load
  checkReadStatus();
  
  // Run after Astro page transitions
  document.addEventListener('astro:page-load', checkReadStatus);
</script>
